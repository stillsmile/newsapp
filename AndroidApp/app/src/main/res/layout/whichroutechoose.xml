<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/lv_whichBusChoose"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="131dp">

        <TextView
            android:id="@+id/tv_busDirectionOppsite"
            android:text="busName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:text="方向"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_busDirectionOppsite"
            android:layout_alignStart="@+id/tv_busDirectionOppsite"
            android:layout_marginTop="35dp"
            android:id="@+id/tv_direction" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_busDirection"
        android:layout_width="match_parent"
        android:layout_height="131dp">
        <TextView
            android:text="busName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_busNameOppsite" />

        <TextView
            android:text="方向"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_busNameOppsite"
            android:layout_alignStart="@+id/tv_busNameOppsite"
            android:layout_marginTop="35dp"
            android:id="@+id/tv_directionOppsite" />
    </RelativeLayout>
</LinearLayout>
