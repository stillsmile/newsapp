<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_progress_and_handler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.helloworld.progressAndHandler">

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/progressBar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="50"/>

    <Button
        android:text="加"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="95dp"
        android:id="@+id/button13"
        android:onClick="add"/>

    <Button
        android:text="减"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:id="@+id/button14"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignBottom="@+id/button13"
        android:layout_alignParentEnd="true"
        android:onClick="reduce"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/progressBar6"
        android:layout_below="@+id/progressBar4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="进度条对话框一"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testdialog1"
        android:onClick="testdialog1"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button13" />

    <Button
        android:text="进度条对话框二"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testdialog2"
        android:onClick="testdialog2"
        android:layout_alignBaseline="@+id/testdialog1"
        android:layout_alignBottom="@+id/testdialog1"
        android:layout_alignStart="@+id/button14" />

    <Button
        android:text="UI线程"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:onClick="UIThread"
        android:layout_below="@+id/testdialog1"
        android:layout_alignEnd="@+id/testdialog1"
        android:layout_marginTop="38dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progressBar6"
        android:layout_toStartOf="@+id/button15"
        android:id="@+id/textView14" />

</RelativeLayout>
