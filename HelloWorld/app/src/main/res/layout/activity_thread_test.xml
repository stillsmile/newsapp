<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thread_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.helloworld.threadTest">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_marginTop="119dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button10"
        android:layout_alignEnd="@+id/button10"
        android:layout_marginTop="72dp"
        android:id="@+id/button11" />

    <TextView
        android:text="button点击来改变值"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button10"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="42dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="测试AsyncTask新线程注入任务队列"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/button11"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="87dp" />

    <Button
        android:text="AsyncTask改变文本"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button9"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="22dp" />

    <TextView
        android:text="context对象是全局变量的入口"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/button12"
        android:layout_marginTop="31dp"
        android:id="@+id/textView10" />
</RelativeLayout>
